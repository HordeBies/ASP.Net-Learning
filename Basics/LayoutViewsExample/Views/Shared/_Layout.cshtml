@{
    if (ViewBag.Title is null)
    {
        ViewBag.Title = "AspNet Core App";
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="navbar">
            <div class="navbar-brand">AspNet Core App</div>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/products">Products</a></li>
                <li><a href="/products/search">Search Product</a></li>
                <li><a href="/products/order">Sort Products</a></li>
            </ul>
        </div>
        <div class="page-content">
            @RenderBody()
        </div>
        <div class="footer-content">
            @RenderSection("footer_section", false)
        </div>
    </div>
</body>
</html>
